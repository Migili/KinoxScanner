<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.theiner.kinoxscanner">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".context.KinoxScannerApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.OverviewActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".services.CheckKinoxService"
            android:exported="false" />
        <service
            android:name=".services.AlarmStarterService"
            android:exported="false" />

        <receiver android:name=".receiver.BootBroadcastReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".activities.UpdateSerieActivity"
            android:label="@string/update_serie" />
        <activity
            android:name=".activities.UpdateFilmActivity"
            android:label="@string/update_film" />
        <activity
            android:name=".activities.ManageSerienActivity"
            android:label="Serien verwalten" />
        <activity
            android:name=".activities.ManageFilmeActivity"
            android:label="Filme verwalten" />
        <activity
            android:name=".activities.EditSerieActivity"
            android:label="Serie bearbeiten" />
        <activity
            android:name=".activities.EditFilmActivity"
            android:label="Film bearbeiten" />
        <activity
            android:name=".activities.SearchResultActivity"
            android:label="Suchergebnisse"
            />
    </application>

</manifest>
