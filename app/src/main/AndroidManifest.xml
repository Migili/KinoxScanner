<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.theiner.kinoxscanner">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".context.KinoxScannerApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.OverviewActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
        </activity>

        <service
            android:name=".services.CheckKinoxService"
            android:exported="false" />
        <service
            android:name=".services.AlarmStarterService"
            android:exported="false" />

        <receiver android:name=".receiver.BootBroadcastReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
            </intent-filter>
        </receiver>
        <receiver android:name=".receiver.DownloadReceiver">
            <intent-filter>
                <action android:name="android.intent.action.DOWNLOAD_NOTIFICATION_CLICKED" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".activities.UpdateKinoxElementActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/update_serie" />
        <activity
            android:name=".activities.ManageSerienActivity"
            android:label="Serien verwalten" />
        <activity
            android:name=".activities.ManageFilmeActivity"
            android:label="Filme verwalten" />
        <activity
            android:name=".activities.EditSerieActivity"
            android:label="Serie bearbeiten"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activities.EditFilmActivity"
            android:label="Film bearbeiten"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activities.SearchResultActivity"
            android:label="Suchergebnisse" />
        <activity
            android:name=".activities.ShowHosterVideosActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Video-Server auswÃ¤hlen" />
        <activity
            android:name=".activities.ViewPagerActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
