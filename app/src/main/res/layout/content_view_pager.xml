    android:layout_height="match_parent"
    android:layout_marginTop="70dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="16dp"
    tools:context=".activities.ViewPagerActivity"
